-- component simple-banner:
caption title:
boolean $hide: false
boolean $mousein: false

-- ftd.column:
if: { !$simple-banner.hide }
width: fill-container
padding.px: 10
padding-horizontal.px if { $ftd.device == "mobile"}: 48
background.solid: $inherited.colors.info.base.light
align-content: center

-- ftd.column:
width: fill-container
max-width.fixed.px: 1024

-- ftd.row:
spacing.fixed.px: 32
align-self: center

-- ftd.text: $simple-banner.title
if: {  $ftd.device != "mobile" }
role: $inherited.types.button-medium
color: $inherited.colors.custom.ten
text-align: center
align-self: center

-- ftd.text: $simple-banner.title
if: {  $ftd.device == "mobile" }
role: $inherited.types.copy-regular
color: $inherited.colors.custom.ten
text-align: center
align-self: center

-- end: ftd.row

-- end: ftd.column

-- ftd.column:
anchor: parent
right.px: 24
right.px if { $ftd.device == "mobile"}: 12
top.px: 10
top.percent if { $ftd.device == "mobile"}: 50
z-index: 9999
align-self: center
margin-top.px if { $ftd.device == "mobile"}: -12

-- ftd.image:
src: $assets.files.static.cross.svg.light
width.fixed.px: 24
height.fixed.px: 24
$on-click$: $ftd.set-bool($a = $simple-banner.hide, v = true)

-- end: ftd.column

-- end: ftd.column

-- end: simple-banner










-- component cta-banner:
caption title:
string cta-text: 
string cta-link: 
boolean $hide: false
boolean $mousein: false

-- ftd.column:
if: { !$cta-banner.hide }
width: fill-container
padding.px: 10
padding-horizontal.px if { $ftd.device == "mobile"}: 48
background.solid: $inherited.colors.scrim
align-content: center

-- ftd.column:
width: fill-container
max-width.fixed.px: 1024

-- ftd.row:
spacing.fixed.px: 10
align-self: center

-- ftd.text: $cta-banner.title
role: $inherited.types.button-medium
color: $inherited.colors.info.base.dark
text-align: center
align-self: center

-- ftd.text: $cta-banner.cta-text
role: $inherited.types.button-medium
color: $inherited.colors.info.base.dark
color if { $cta-banner.mousein }: $inherited.colors.info.base.dark
border-bottom-width.px: 1
border-color if { $cta-banner.mousein }: $inherited.colors.custom.three
